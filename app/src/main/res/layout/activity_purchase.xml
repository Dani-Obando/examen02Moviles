<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campos para agregar productos -->
    <EditText
        android:id="@+id/etProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del producto" />

    <EditText
        android:id="@+id/etProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio unitario"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etProductQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad"
        android:inputType="number" />

    <EditText
        android:id="@+id/etProductDiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descuento"
        android:inputType="numberDecimal" />

    <!-- BotÃ³n para agregar el producto -->
    <Button
        android:id="@+id/btnAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Producto" />

    <!-- ListView para mostrar los productos agregados -->
    <ListView
        android:id="@+id/listViewProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Botones para aplicar o cancelar la compra -->
    <Button
        android:id="@+id/btnApplyPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplicar Compra" />

    <Button
        android:id="@+id/btnCancelPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar Compra" />
</LinearLayout>
